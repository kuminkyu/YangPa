<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="FilterMapper">
	<select id="selectLarge" resultType="co.kr.yangpa.filter.FilterDTO">
		select addrcode , addrname
		from addrLarge
	</select>
	
	<select id="selectMiddle" parameterType="java.lang.String"
	resultType="co.kr.yangpa.filter.FilterDTO">
		SELECT addrcode, addrname 
		FROM addrMiddle 
		WHERE addrcode LIKE CONCAT(#{lcode},'%')
	</select>
</mapper>









